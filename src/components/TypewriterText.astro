---
export interface Props {
	text: string | string[];
	speed?: number;
	deleteSpeed?: number;
	pauseTime?: number;
	class?: string;
}

const {
	text,
	speed = 100,
	deleteSpeed = 50,
	pauseTime = 2000,
	class: className = "",
} = Astro.props;
const textData = Array.isArray(text) ? JSON.stringify(text) : text;
---

<span class={`typewriter ${className}`} data-text={textData} data-speed={speed} data-delete-speed={deleteSpeed} data-pause-time={pauseTime}></span>

<script>
class TypewriterEffect {
    private element: HTMLElement;
    private texts: string[];
    private currentTextIndex: number = 0;
    private speed: number;
    private deleteSpeed: number;
    private pauseTime: number;
    private currentIndex: number = 0;
    private isDeleting: boolean = false;
    private timeoutId: number | null = null;

    constructor(element: HTMLElement) {
        this.element = element;
        const textData = element.dataset.text || '';
        
        // 尝试解析为JSON数组，如果失败则作为单个字符串处理
        try {
            const parsed = JSON.parse(textData);
            this.texts = Array.isArray(parsed) ? parsed : [textData];
        } catch {
            this.texts = [textData];
        }
        
        this.speed = parseInt(element.dataset.speed || '100');
        this.deleteSpeed = parseInt(element.dataset.deleteSpeed || '50');
        this.pauseTime = parseInt(element.dataset.pauseTime || '2000');
        
        // 如果有多条文本且未启用打字机效果，随机显示一条
        if (this.texts.length > 1 && !this.isTypewriterEnabled()) {
            this.showRandomText();
        } else {
            this.start();
        }
    }

    private isTypewriterEnabled(): boolean {
        // 检查是否有打字机相关的数据属性
        return this.element.dataset.speed !== undefined || 
               this.element.dataset.deleteSpeed !== undefined || 
               this.element.dataset.pauseTime !== undefined;
    }

    private showRandomText() {
        const randomIndex = Math.floor(Math.random() * this.texts.length);
        this.element.textContent = this.texts[randomIndex];
    }

    private start() {
        if (this.texts.length === 0) return;
        // 立即同步显示第一个字符，避免初始为空
        const currentText = this.getCurrentText();
        if (currentText.length > 0) {
            this.currentIndex = 1;
            this.element.textContent = currentText.substring(0, 1);
        }
        // 然后继续打字机动画
        this.displayNextChar();
    }

    private getCurrentText(): string {
        return this.texts[this.currentTextIndex] || '';
    }

    private displayNextChar() {
        const currentText = this.getCurrentText();
        
        if (this.isDeleting) {
            // 删除字符
            if (this.currentIndex > 0) {
                this.currentIndex--;
                this.element.textContent = currentText.substring(0, this.currentIndex);
                this.timeoutId = window.setTimeout(() => this.displayNextChar(), this.deleteSpeed);
            } else {
                // 删除完成，切换到下一条文本
                this.isDeleting = false;
                this.currentTextIndex = (this.currentTextIndex + 1) % this.texts.length;
                this.timeoutId = window.setTimeout(() => this.displayNextChar(), this.speed);
            }
        } else {
            // 添加字符
            if (this.currentIndex < currentText.length) {
                this.currentIndex++;
                this.element.textContent = currentText.substring(0, this.currentIndex);
                this.timeoutId = window.setTimeout(() => this.displayNextChar(), this.speed);
            } else {
                // 打字完成，暂停后开始删除（如果有多条文本）
                if (this.texts.length > 1) {
                    this.isDeleting = true;
                    this.timeoutId = window.setTimeout(() => this.displayNextChar(), this.pauseTime);
                } else {
                    // 如果只有一条文本，保持显示不删除
                }
            }
        }
    }

    public destroy() {
        if (this.timeoutId) {
            clearTimeout(this.timeoutId);
        }
    }
}

// 初始化所有打字机效果的函数
const initTypewriter = () => {
    const typewriterElements = document.querySelectorAll('.typewriter:not([data-initialized])');
    typewriterElements.forEach((element) => {
        element.setAttribute('data-initialized', 'true');
        new TypewriterEffect(element as HTMLElement);
    });
};

// 使用多层防护确保初始化
const setupTypewriter = () => {
    // 第一步：立即初始化
    initTypewriter();
    
    // 第二步：定期轮询检查（处理延迟加载的情况）
    let attempts = 0;
    const maxAttempts = 20;
    const pollInterval = setInterval(() => {
        attempts++;
        const uninitialized = document.querySelectorAll('.typewriter:not([data-initialized])');
        if (uninitialized.length > 0) {
            initTypewriter();
        }
        if (attempts >= maxAttempts) {
            clearInterval(pollInterval);
        }
    }, 100);
    
    // 第三步：监听 Swup 页面切换事件
    document.addEventListener('swup:contentReplaced', () => {
        requestAnimationFrame(() => {
            initTypewriter();
        });
    });
};

// 在脚本加载完后立即执行
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
        setupTypewriter();
    });
    // 同时也尝试在其他时机立即执行
    document.addEventListener('readystatechange', () => {
        if (document.readyState === 'interactive' || document.readyState === 'complete') {
            setupTypewriter();
        }
    });
} else {
    setupTypewriter();
}

// 使用 MutationObserver 检测新插入的元素
try {
    const mutationObserver = new MutationObserver(() => {
        const uninitialized = document.querySelectorAll('.typewriter:not([data-initialized])');
        if (uninitialized.length > 0) {
            console.log('[Typewriter] MutationObserver: 发现 ' + uninitialized.length + ' 个新元素');
            initTypewriter();
        }
    });
    
    mutationObserver.observe(document.documentElement, {
        childList: true,
        subtree: true,
    });
} catch (e) {
    console.error('MutationObserver error:', e);
}
</script>

<style>
.typewriter {
    position: relative;
    min-height: 1.5em; /* 确保即使没有文字也保持最小高度 */
    display: inline-block;
    vertical-align: baseline;
}

/* 确保打字机效果不会导致布局抖动 */
.typewriter:empty::before {
    content: '\00A0'; /* 使用不间断空格保持高度 */
    visibility: hidden;
}
</style>